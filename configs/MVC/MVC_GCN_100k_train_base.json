{
    "setup": {
        "gpu": {
            "use": true,
            "id": 0
        },
        "model": "GCN",
        "train_dataset": "MVC",
        "val_dataset": "MVC",
        "test_dataset" : "MVC",
        "out_dir": "out/MVC_node_classification/",
        "features": "basic"
    },

    "tunable_params": {
        "init_lr": 0.01,
        "lr_reduce_factor": 0.1,
        "lr_schedule_patience": 10,
        "min_lr": 0.0001,
        "weight_decay": 0.0005
    },

    "params": {
        "seed": "random",
        "epochs": 50,
        "print_epoch_interval": 1,
        "max_time": 24
    },

    "tunable_net_params": {
        "batch_size": 32,
        "hidden_dim": 120,
        "out_dim": 120,
        "batch_norm": false,
        "dropout": 0.2,
        "residual": false,
        "self_loop": false,
        "loss_weight": [1, 1]
    },

    "net_params": {
        "L": 4
    }
}