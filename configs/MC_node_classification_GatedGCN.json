{
    "gpu": {
        "use": true,
        "id": 0
    },

    "model": "GatedGCN",
    "train_dataset": "MC",
    "val_dataset": "MC",

    "out_dir": "out/MC_node_classification/",

    "params": {
        "seed": 41,
        "epochs": 10,
        "batch_size": 256,
        "init_lr": 1e-2,
        "lr_reduce_factor": 0.5,
        "lr_schedule_patience": 25,
        "min_lr": 1e-5,
        "weight_decay": 5e-4,
        "print_epoch_interval": 5,
        "max_time": 24
    },

    "net_params": {
        "L": 2,
        "hidden_dim": 32,
        "out_dim": 32,
        "residual": true,
        "readout": "mean",
        "in_feat_dropout": 0.35,
        "dropout": 0.35,
        "batch_norm": true,
        "self_loop": false,
        "pos_enc": false
    }
}