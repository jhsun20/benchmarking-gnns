{
    "setup": {
        "gpu": {
            "use": true,
            "id": 0
        },
        "model": "PNA",
        "train_dataset": "MC",
        "val_dataset": "MC",
        "test_dataset" : "MC",
        "out_dir": "out/MC_node_classification/",
        "features": "basic"
    },

    "tunable_params": {
        "init_lr": 0.01,
        "lr_reduce_factor": 0.5,
        "lr_schedule_patience": 25,
        "min_lr": 0.00001,
        "weight_decay": 0.0005
    },

    "params": {
        "seed": "random",
        "epochs": 1000,
        "print_epoch_interval": 1,
        "max_time": 24
    },

    "tunable_net_params": {
        "batch_size": 32,
        "hidden_dim": 24,
        "out_dim": 24,
        "batch_norm": true,
        "dropout": 0.2,
        "residual": true,
        "loss_weight": [0.3, 2],
        "delta": 2.5
    },

    "net_params": {
        "L": 4,
        "aggregators": ["mean", "max", "min", "std", "var", "sum", "moment3"],
        "scalers": ["identity", "amplification", "attenuation"],
        "num_towers": 1
    }
}