{
    "gpu": {
        "use": true,
        "id": 0
    },

    "model": "GAT",
    "train_dataset": "MC",
    "val_dataset": "MC",

    "out_dir": "out/MC_node_classification/",

    "params": {
        "seed": 41,
        "epochs": 10,
        "batch_size": 16,
        "init_lr": 1e-2,
        "lr_reduce_factor": 0.5,
        "lr_schedule_patience": 25,
        "min_lr": 1e-5,
        "weight_decay": 5e-4,
        "print_epoch_interval": 5,
        "max_time": 24
    },

    "net_params": {
        "L": 4,
        "hidden_dim": 15,
        "out_dim": 120,
        "n_heads": 8,
        "batch_norm": true,
        "in_feat_dropout": 0.35,
        "attn_drop": 0.35,
        "neg_slope": 0.2,
        "residual": true,
        "self_loop": true
    }
}