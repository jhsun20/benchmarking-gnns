{
    "gpu": {
        "use": true,
        "id": 0
    },
    "model": "GCN",
    "train_dataset": "MC",
    "val_dataset": "MC",
    "test_dataset": "MC",

    "out_dir": "out/MC_node_classification/",
    "params": {
        "seed": 41,
        "epochs": 1000,
        "batch_size": 64,
        "init_lr": 1e-2,
        "lr_reduce_factor": 0.1,
        "lr_schedule_patience": 25,
        "min_lr": 1e-5,
        "weight_decay": 5e-4,
        "print_epoch_interval": 5,
        "max_time": 24
    },
    "net_params": {
        "L": 4,
        "hidden_dim": 120,
        "out_dim": 120,
        "residual": true,
        "in_feat_dropout": 0.35,
        "batch_norm": true,
        "self_loop": true
    }
}